<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>@ViewBag.Title - @Common.ApplicationName</title>


    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">

    <link rel="stylesheet" href="~/Content/plugins/fontawesome-free/css/all.min.css">

    <link href="~/Content/plugins/select2/css/select2.min.css" rel="stylesheet" />
    <link href="~/Content/plugins/sweetalert2/sweetalert2.css" rel="stylesheet" />
    <link href="~/Content/plugins/daterangepicker/daterangepicker.css" rel="stylesheet" />
    <link href="~/Content/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/Content/dist/css/adminlte.min.css">

    @RenderSection("Styles", required: false)

</head>
<body class="hold-transition sidebar-mini layout-navbar-fixed layout-fixed layout-footer-fixed">
    <div class="wrapper">


        <div class="preloader flex-column justify-content-center align-items-center">
            @*<img class="animation__wobble" src="~/images/anticicon.png" alt="Logo" height="60" width="60">*@
        </div>


        <nav class="main-header navbar navbar-expand navbar-white navbar-light" style="background-color: #007D39 !important;">

            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-white" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white">Welcome @Common.Get_Session(SessionKey.USER_NAME)</a>
                </li>
            </ul>


            <ul class="navbar-nav ml-auto text-white">
                <li class="nav-item dropdown user-menu">
                    <a class="nav-link" href="/Home/Login">
                        <i class="fa fa-user-circle elevation-2" style="color: white"></i>
                        <span class="d-none d-md-inline" style="color: white">Logout</span>
                    </a>

                    <ul class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        <li class="user-header" style="background-color: #007D39 !important;">
                            <img src="~/Content/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">

                            <p>
                                <strong> @Common.Get_Session(SessionKey.USER_NAME)</strong> &nbsp;<span>( @Common.Get_Session(SessionKey.ROLE_NAME) )</span>
                                <small>Member since Nov. 2012</small>
                            </p>
                        </li>

                        <li class="user-footer">
                            <a href="@Url.Action("Logout", "Home")" class="btn btn-default btn-flat float-right">Sign out</a>
                        </li>
                    </ul>
                </li>
            </ul>
        </nav>

        <aside class="main-sidebar sidebar-default elevation-4">
            <a href="#" class="brand-link" style="background-color: #007D39 !important;">
                <img src="~/Content/images/PGLogo1.png" alt="Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light text-white">Pintoo Garments</span>
            </a>

            <div class="sidebar">

                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Home")" class="nav-link" style="color: #007D39 !important;">
                                <i class="nav-icon fas fa-th"></i>
                                <p style="color: #007D39 !important;"> Dashboard </p>
                            </a>
                        </li>

                    </ul>
                </nav>
            </div>
        </aside>


        <div class="content-wrapper p-3">
            @RenderBody()
        </div>

        <footer class="main-footer" style="background-color: #007D39 !important;">
            <div class="text-white">
                <strong>Copyright &copy; 2022-2023 Pintoo Garments</strong>
                All rights reserved.
            </div>
        </footer>
    </div>

    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="~/Content/plugins/jquery/jquery.min.js"></script>
    <script src="~/Content/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/plugins/select2/js/select2.min.js"></script>
    <script src="~/Content/plugins/moment/moment.min.js"></script>
    <script src="~/Content/plugins/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/Content/plugins/daterangepicker/daterangepicker.js"></script>
    <script src="~/Content/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Content/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>

    <script src="~/Content/dist/js/adminlte.min.js"></script>

    <script src="https://rawgit.com/RobinHerbots/jquery.inputmask/3.x/dist/jquery.inputmask.bundle.js"></script>


    @RenderSection("scripts", required: false)
</body>
</html>
